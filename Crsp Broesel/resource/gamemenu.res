"GameMenu" [$WIN32]
{
	// These buttons are only shown while in-game
	// and also are positioned by the .res file
	

	//always shown
///////////////////////////////////////////////////////////////

	"ServerBrowserButton"
	{
		"label" "PLAY" 
		"command" "OpenServerBrowser"
	} 
		
////////////////////////////////////////////

	"PlayPVEButton"
	{
		"label" "+" 
		"command" "OpenCreateMultiplayerGameDialog"
		"OnlyAtMenu" "1"
		"tooltip" "Create local server"
	}	
	
	"ResumeGameButton"
	{
		"label"			"^"
		"command"		"ResumeGame"
		"OnlyInGame"	"1"
		"tooltip" "Resume current game"
	}
	
////////////////////////////////////////
	
	"CasualButton"
	{
		"label" "CASUAL" 
		"command" "play_casual"
	}

////////////////////////////////////////////////////////////////	

	"MvMButton"
	{
		"label" "MVM"
		"command" "play_mvm"
	}

/////////////////////////////////////////////////////////////////////////////////////////////////	

	"CompetitiveButton"
	{
		"label" "COMPETITIVE"
		"command" "play_competitive"
	}

/////////////////////////////////////////////////////////////////////////////////////////////////

	"Stats"
	{
		"label"			"STATS"
		"command"		"engine cl_disablehtmlmotd 0; say .ss"
	}

////////////////////////////////////////////////////////////////////////////////////////

	"DEMOUI"
	{
		"label" "DEMOUI"
		"command" "engine demoui"
	}
	
//////////////////////////////////////////////////////////////////////////////////////////

	"CharacterSetupButton"
	{
		"label" "ITEMS"
		"command" "engine open_charinfo"
	}

/////////////////////////////////////////////////////////////////////////
	"SettingsButton"
	{
		"label"		"OPTIONS"
		"command"	"OpenOptionsDialog"
	}

//////////////////////////////////////////////////////////////////
	"ConsoleButton"
	{
		"label" "CONSOLE" //9
		"command" "engine con_enable 1;toggleconsole"
        "tooltip" "TOGGLE CONSOLE"
	} 
	
////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////
	
	"QuitButton"
	{
		"label" "EXIT"
		"command" "engine replay_confirmquit"
		"OnlyAtMenu" "1"
	}
	
	"DisconnectButton"
	{
		"label" 		"LEAVE"
		"command" 		"engine disconnect"
		"OnlyInGame"	"1"
	}
//////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////
//////////////////////////////////////////////////////////////
}
	










